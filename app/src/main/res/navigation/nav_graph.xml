<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    android:label="@string/app_name"
    app:startDestination="@id/oneFragment">

    <fragment
        android:id="@+id/oneFragment"
        android:name="com.example.minesweeper.ui.OneFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_one">
        <action
            android:id="@+id/action_oneFragment_to_scoreFragment"
            app:destination="@id/scoreFragment" />
    </fragment>
    <fragment
        android:id="@+id/scoreFragment"
        android:name="com.example.minesweeper.ui.ScoreFragment"
        android:label="@string/high_scores"
        tools:layout="@layout/fragment_score">
        <action
            android:id="@+id/action_scoreFragment_to_oneFragment"
            app:destination="@id/oneFragment"
            app:popUpTo="@id/oneFragment"
            app:popUpToInclusive="false" />
    </fragment>
</navigation>